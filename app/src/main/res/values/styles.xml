<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema Principal -->
    <style name="Theme.RocknEco2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:statusBarColor">@color/primaryDark</item>
    </style>

    <!-- Text Styles -->
    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondaryText</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


    <!-- Botones -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">8dp</item>
    </style>

</resources>
